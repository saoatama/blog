<p id="notice"><%= notice %></p>
<main>
<h1>Archives</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Month</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= archive.id %></td>
        <td><%= archive.month %></td>
        <td><%= archive.year %></td>
        <td><%= link_to 'Show', [:admin, archive] %></td>
        <td><%= link_to 'Edit', edit_admin_archive_path(archive) %></td>
        <td><%= link_to 'Destroy', [:admin, archive], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Archive', new_admin_archive_path %>
</main>
<%= render '/admin/side' %>
