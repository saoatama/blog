<%= render 'share/header' %>

<main>
  <% @articles.each do |article| %>
    <section>
      <p class="time"><%= article.created_at%></p>
      <article>
        <%= image_tag article.picture, class: "thumbnail" %>
        <p class="title"><%= article.title %></p>
        <p class="text"><%= article.text %></p>
        <%= link_to "readmore", "entry/#{article.slung}", :target=>"_blank", class: "readmore" %>
      </article>
    <section>
  <% end %>
</main>

<%= render 'share/side' %>
